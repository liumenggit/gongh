/* china_ghphpt/couponDetail/couponDetail.wxss */

.container {
  background: #f9f9f9;
}

.con {
  width: 630rpx;
  height: 1130rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/couponD.png') no-repeat;
  background-size: 100% auto;
}

.type {
  width: 173rpx;
  height: 65rpx;
  line-height: 65rpx;
  position: absolute;
  top: 40rpx;
  left: 0;
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  padding-right: 36rpx;
  overflow: hidden;
}

.changqi {
  background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/couponDT2.png') no-repeat;
  background-size: auto 100%;
}

.xianshi {
  background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/couponDT1.png') no-repeat;
  background-size: auto 100%;
}

.title {
  width: 80%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  top: 140rpx;
  left: 10%;
  color: #666;
  word-break: break-all;
  overflow: hidden;
}

.price {
  width: 80%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  top: 200rpx;
  left: 10%;
  color: #666;
  word-break: break-all;
  overflow: hidden;
}

.getBtn {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(70deg, #ff6c5f, #fb4b6b);
  border-radius: 10rpx;
  position: absolute;
  top: 260rpx;
  left: 215rpx;
}

.sellerName {
  width: 80%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  top: 420rpx;
  left: 10%;
  color: #fff;
  font-weight: bold;
  word-break: break-all;
  overflow: hidden;
}

.time {
  width: 90%;
  height: 115rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  top: 480rpx;
  left: 5%;
  color: #fff;
  word-break: break-all;
  overflow: hidden;
}

.remark {
  width: 80%;
  height: 300rpx;
  background: #fff;
  position: absolute;
  top: 612rpx;
  left: 10%;
  border-radius: 10rpx;
}

.remark_title {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #424242;
}

.remark_con {
  width: 96%;
  height: 230rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #424242;
  overflow-y: scroll;
  margin: 10rpx auto;
  word-break: break-all;
}

.goBusiness {
  width: 500rpx;
  height: 100rpx;
  color: #fff;
  line-height: 95rpx;
  text-align: center;
  font-size: 24rpx;
  position: absolute;
  bottom: 40rpx;
  left: 57rpx;
  background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/goB.png') no-repeat;
  background-size: 100% auto;
  margin: 0 auto;
}

.tip {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.65);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}

.tip_con {
  width: 500rpx;
  height: 300rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.tip_title {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(70deg, #ff6c5f, #fb4b6b);
}

.tip_title i {
  width: 100%;
  height: 80rpx;
  display: block;
  background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/tip2.png') no-repeat center;
  background-size: 50rpx;
}

.tip_detail {
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.tip_detail text {
  line-height: 80rpx;
  height: 80rpx;
  margin: 40rpx auto;
  display: block;
}

.successBtn {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(70deg, #ff6c5f, #fb4b6b);
  border-radius: 10rpx;
  display: block;
  margin: 0rpx auto;
}
