/* pages/login/login.wxss */

.container {
    background: url("https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/loginBg.jpg") no-repeat center;
    background-size: 100% auto;
    align-items: stretch;
    padding: 0;
    width: 100%;
    height: 100vh;
    overflow: hidden;
}

.content {
    flex: 1;
    display: flex;
    position: relative;
    z-index: 10;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding-bottom: 450rpx;
    /* background: -webkit-gradient(linear, left top, left bottom, from(rgba(244,244,244,0)), color-stop(0.1, #f4f4f4), to(#f4f4f4)); */
    opacity: 0;
    transform: translate3d(0, 100%, 0);
    animation: rise 3s cubic-bezier(0.19, 1, 0.22, 1) 0.25s forwards;
}

@keyframes rise {
    0% {
        opacity: 0;
        transform: translate3d(0, 100%, 0);
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 1;
        transform: translate3d(0, 300rpx, 0);
    }
}

.title {
    position: absolute;
    top: 130rpx;
    left: 50%;
    width: 600rpx;
    height: 200rpx;
    margin-left: -300rpx;
    opacity: 0;
    animation: show 2.5s cubic-bezier(0.19, 1, 0.22, 1) 0.5s forwards;
    color: #fff;
    font-size: 24px;
    text-align: center;
}

@keyframes show {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 0.95;
    }
}

.bd {
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    background: #fff;
    width: 94%;
    margin: 0 auto;
    border-radius: 20rpx;
    height: 480rpx;
}

form {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    /* justify-content: center; */
}

.input-title {
    width: 100%;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 40rpx;
    color: #fb4b6b;
    margin: 30rpx 0;
}

.input-group {
    display: flex;
    align-items: center;
    padding: 25rpx 10rpx;
    margin: 20rpx 3%;
    background: #fff;
    border-bottom: 2rpx solid #f9f9f9;
    transition: all 0.25s ease-in-out;
}

.tel {
    background: url('data:image/png;base64,') no-repeat;
    background-size: 20rpx auto;
    background-position: center left 10rpx;
}

.code {
    background: url('data:image/png;base64,') no-repeat;
    background-size: 20rpx auto;
    background-position: center left 10rpx;
}

.input-group.active {
    border: 2px solid #fb4b6b;
}

.input-group input, .input-group picker {
    flex: 1;
    font-size: 28rpx;
    min-height: 52rpx;
    height: 52rpx;
    line-height: 52rpx;
    padding: 0 25rpx 0 45rpx;
}

.input-placeholder, .input-group picker.placeholder {
    color: #ccc;
}

button.form-code-btn {
    color: #fb4b6b;
    border: 1px solid #fb4b6b;
    font-size: 24rpx;
}

.confirm-btn:active {
    opacity: 0.8;
}

.confirm-btn  .loginBtn {
    width: 94%;
    margin: 50rpx 3%;
    line-height: 100rpx;
    height: 100rpx;
    font-size: 32rpx;
    text-align: center;
    color: #fff;
    background: linear-gradient(70deg, #ff6c5f, #fb4b6b);
    border-radius: 10rpx;
    padding: 0;
}

.help-a text {
    word-break: break-all;
}

/**登录动画**/

.login_video {
    position: absolute;
    z-index: 1;
    top: 50%;
    left: 50%;
    width: 750rpx;
    margin-left: -375rpx;
    height: 1334rpx;
    margin-top: -667rpx;
}

.video_hidden {
    visibility: hidden;
}

page .wx-video-bar {
    display: none;
}

.change {
    width: 100%;
    text-align: center;
    color: #fb4b6b;
    font-size: 26rpx;
    height: 60rpx;
    line-height: 60rpx;
}
