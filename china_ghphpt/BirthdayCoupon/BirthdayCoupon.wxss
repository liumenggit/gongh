.fei {
    animation: animate 3s ease-in;
    overflow: hidden;
    width: 100vw;
    height: 70vh;
    position: absolute;
    pointer-events: none;
}

@keyframes animate {
    from {
        top: 400px;
    }

    to {
        top: 0px;
    }
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f5f5f5;
    padding-top: 160rpx;
    padding-bottom: 100rpx;
    flex-direction: column;
}

.cont1 {
    width: 600rpx;
    height: 900rpx;
    background: #fff url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/mine.png') no-repeat;
    background-size: 100% auto;
    background-position: bottom center;
    border-radius: 20rpx;
    margin-bottom: 60rpx;
}

.cbg {
    box-shadow: 0 2rpx 4rpx 2rpx rgba(0, 0, 0, 0.05);
}

.cont2 {
    width: 600rpx;
    height: 80rpx;
    background: linear-gradient(180deg, rgba(255, 133, 119, 1) 0%, rgba(255, 96, 85, 1) 100%);
    border-radius: 20rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 30rpx;
}

.cont1_top {
    width: 100%;
    height: 120rpx;
    position: relative;
}

.usertx {
    width: 160rpx;
    height: 160rpx;
    position: absolute;
    left: 50%;
    margin-left: -80rpx;
    top: -80rpx;
}

.usertx_img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.huangguan {
    width: 160rpx;
    height: 160rpx;
    position: absolute;
    left: 45%;
    top: -150rpx;
}

.huangguan_img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.cont1_mid {
    padding: 0 40rpx;
}

.t-red {
    color: rgba(249, 87, 98, 1)
}

.line1 {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: solid 1rpx #eee;
    font-size: 30rpx;
    color: #222;
}

.indent {
    text-indent: 60rpx;
}

.cont1_foot {
    color: #555;
    font-size: 28rpx;
    text-align: right;
    margin: 30rpx 40rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.cake_img {
    width: 95rpx;
    height: 95rpx;
    margin-right: 20rpx;
}