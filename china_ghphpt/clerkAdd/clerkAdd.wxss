/* china_ghphpt/clerkAdd/clerkAdd.wxss */
page {
    background: #f2f2f2;
}

.container {
    background: #f2f2f2;
}

.bd {
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    background: #fff;
    width: 94%;
    margin: 3%;
    border-radius: 20rpx;
    height: 320rpx;

}

form {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    /* justify-content: center; */
}

.input-group {
    display: flex;
    align-items: center;
    padding: 25rpx 10rpx;
    margin: 20rpx 3%;
    background: #fff;
    border-bottom: 2rpx solid #f9f9f9;
    transition: all 0.25s ease-in-out;
}

.name {
    background: url('data:image/png;base64,') no-repeat;
    background-size: 20rpx auto;
    background-position: center left 10rpx;
}
.tel {
    background: url('data:image/png;base64,') no-repeat;
    background-size: 20rpx auto;
    background-position: center left 10rpx;
}
.input-group.active {
    border: 2px solid #095ed4;
}


.input-group input, .input-group picker {
    flex: 1;
    font-size: 28rpx;
    min-height: 52rpx;
    height: 52rpx;
    line-height: 52rpx;
    padding: 0 25rpx 0 45rpx;
}

.input-placeholder, .input-group picker.placeholder {
    color: #ccc;
}

.confirm-btn:active {
    opacity: 0.8;
}

.confirm-btn  .loginBtn {
    width: 94%;
    margin: 50rpx 3%;
    line-height: 100rpx;
    height: 100rpx;
    font-size: 34rpx;
    text-align: center;
    color: #fff;
    background: linear-gradient(70deg, #ff6c5f, #fb4b6b);
    border-radius: 10rpx;
    padding: 0;
}

.help-a text {
    word-break: break-all;
}