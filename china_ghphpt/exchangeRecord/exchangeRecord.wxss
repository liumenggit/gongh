/* china_ghphpt/writeOff/writeOff.wxss */

.top {
    width: 100%;
    height: 100rpx;
    background: #f2f2f2;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-direction: row;
    flex-wrap: wrap;
}

.top picker {
    width: 170rpx;
    margin: 25rpx auto;
    padding: 0 10rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    background: url('data:image/png;base64,') no-repeat;
    background-size: 100% 100%;
}

.searchBtn {
    width: 12%;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    background: #fff;
    color: #f95863;
    border: 2rpx solid #f95863;
    margin: 25rpx auto;
    font-size: 24rpx;
    border-radius: 10rpx;
}

.info {
    width: 100%;
    background: #fff;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 24rpx;
    color: #989898;
}

.info .left {
    float: left;
    margin-left: 20rpx;
}

.info .right {
    float: right;
    text-align: right;
    margin-right: 20rpx;
}

.info b {
    color: #f95863;
    margin: 0 10rpx;
}

.wrap {
    width: 100%;
    height: 200rpx;
    background: #fff;
    margin: 20rpx 0;
}

/* 卡券列表 */

.wrap {
    width: 94%;
    height: 200rpx;
    margin: 20rpx auto 0;
    padding: 15rpx 3%;
    display: block;
    position: relative;
    overflow: hidden;
}

.xianshi {
    background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/exchangeRecord.png') no-repeat;
    background-size: 100% auto;
}

.changqi {
    background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/changqiW.png') no-repeat;
    background-size: 100% auto;
}

.couponLeft {
    width: 72%;
    float: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.couponLeft view {
    color: #666;
    font-size: 24rpx;
    line-height: 50rpx;
}

.time {
    font-size: 22rpx;
}

.writeoff_name, .time {
    /* width: 50%; */
    float: left;
}

.couponRight {
    width: 26%;
    float: right;
}

.couponL_price {
    text-align: center;
    color: #f95863;
    font-size: 30rpx;
    line-height: 180rpx;
}

.couponL_price b {
    font-size: 40rpx;
}

.listNo {
    display: none;
    width: 100%;
    height: 70vh;
    background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/noData.png') no-repeat center;
    background-size: 400rpx auto;
}

.nolist {
    display: block;
}

.nomore{
    color: #ccc;
    line-height: 40px;
    text-align: center;
    font-size: 24rpx;
}