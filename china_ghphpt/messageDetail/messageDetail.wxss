/* china_ghphpt/messageDetail/messageDetail.wxss */
page {
    background: #f2f2f2;
}

.container {
    background: #f2f2f2;
    height: calc(100% - 120px);
    padding-bottom: 120rpx;
}
.clear{
    width: 100%;
    height: 40rpx;
}
.messageWrap {
    background: #fff;
    width: 630rpx;
    margin: 0rpx 30rpx 20rpx;
    border-radius: 20rpx;
    position: relative;
    color: #989898;
    padding: 30rpx;
}

.line{
    width: 100%;
    height: 3rpx;
    background: #f9f9f9;
    margin: 20rpx 0;

}
.title{
    font-size: 28rpx;
}
.con,.time,.content{
    font-size: 24rpx;
    margin: 5rpx 0;
    font-weight: lighter;
}