<!--china_ghphpt/h5Map/certified.wxml-->
<view style="display: flex;justify-content: center;margin: 20rpx 0rpx;">
    <image style="width: 240rpx;height: 240rpx;" src="https://wx.shuidiwang.cn/addons/china_ghphpt/resource/imgs/gonghui.jpg" />
</view>
<form bindsubmit="formSubmit">
    <view class="bd">
        <view class="input-group name">
            <label>您的职业</label>

            <picker data-array="{{professionList}}" model:value="{{professionIndex}}" range="{{professionList}}" range-key="name" style="width: 100%;">
                <input class="infoTitle" name="professionIndex" placeholder="请选择您的职业" value="{{professionList[professionIndex].name}}" disabled="true" />
            </picker>

            <!-- <picker bindchange="bindPickerChange" value="{{professionIndex}}" range="{{professionList}}">
                <input class="infoTitle" name="name" placeholder="职业" value="{{professionList[professionIndex]}}" bindinput="bindKeyInput" />
            </picker> -->
        </view>
        <view class="input-group name">
            <label>真实姓名</label>
            <input name="name" placeholder="请输入真是姓名(身份证上的)" model:value="{{name}}" />
        </view>
        <view class="input-group tel">
            <label>身份证号</label>
            <input name="id_card" placeholder="请输入您的身份证号码" model:value="{{id_card}}" />
        </view>
        <view class="input-group tel">
            <label>手机号码</label>
            <view class="getPhone">
                <input name="phone" placeholder="请输入您的手机号码" model:value="{{phone}}" />
                <button class="getPhoneButton" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
                    获取手机号
                </button>
            </view>

        </view>
        <button style="background-color: #fb4b6b;width: 100%;font-size: 40rpx;margin-top: 100rpx;" type="primary" formType="submit">同意授权并继续</button>
    </view>
</form>

<view class="tip" wx:if="{{tipShow}}">
    <view class="tip_con">
        <view class="tip_title"><i></i></view>
        <view class="tip_detail">
            <text>{{tipCon}}</text>
        </view>
    </view>
</view>