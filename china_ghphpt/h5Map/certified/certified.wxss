}

button {
    font-size: 24rpx;
}


.btn-certified {
    width: 100%;
    position: absolute;
    bottom: 100rpx;
}


.infoTitle {
    height: 64rpx;
    background: url('data:image/svg+xml;base64,') no-repeat right center;
    background-size: contain;
}



.tip {
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.65);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    align-items: center;
}

.tip_con {
    width: 500rpx;
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden;
}

.tip_title {
    width: 100%;
    height: 80rpx;
    background: linear-gradient(70deg, #ff6c5f, #fb4b6b);
}

.tip_title i {
    width: 100%;
    height: 80rpx;
    display: block;
    background: url('https://wx.shuidiwang.cn/addons/china_ghphpt/resource/mobileImg/tip2.png') no-repeat center;
    background-size: 50rpx;
}

.tip_detail {
    text-align: center;
    font-size: 40rpx;
    color: #333;
}

.tip_detail text {
    line-height: 80rpx;
    height: 80rpx;
    margin: 40rpx auto;
    display: block;
}